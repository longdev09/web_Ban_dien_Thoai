@{
    ViewBag.Title = "Ql_KhachHang";
    Layout = "~/Views/Shared/layOut_Admin.cshtml";
}


@using LKDienThoai_Web.Models;
@model List<KhachHang>
<div class="row mt-3">
    <div class="tieuDe">
        <p>Quản Lý Khách Hàng</p>
    </div>
</div>
<div class="row mt-2">
    <div class="row">
        <div class="dsSP">
            
            <hr style="border: 1px solid gray;">
            <div style="width: 200px;">
                <div class="input-group rounded">
                    <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                    <button class="btn">Tìm kiếm</button>
                </div>
            </div>
            <table class="table text-center">
                <tr>
                    <<th>
    Xóa

</th>
                    <th>Mã khách hàng</th>
                    <th>Họ và tên</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>SĐT</th>
                    <th>Địa chỉ</th>
                </tr>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>
                            <a href="/Admin/XoaKhachHang/?m=@i.MaKH">
                                Xóa
                            </a>
                           
                        </td>
                        <td>@i.MaKH</td>
                        <td>@i.HoTen</td>
                        <td>@i.NgaySinh</td>
                        <td>@i.gioiTinh</td>
                        <td>@i.DienThoai</td>
                        <td>@i.DiaChi</td>
                    </tr>
                }


            </table>
        </div>
    </div>
</div>


